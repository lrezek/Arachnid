<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    ansi                        = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "bootstrap.php">

    <testsuites>
        <testsuite name="Neo4PHP Test Suite">
            <file>lib/LRezek/Neo4j/Tests/QueryTest.php</file>
            <file>lib/LRezek/Neo4j/Tests/EntityManagerTest.php</file>
            <file>lib/LRezek/Neo4j/Tests/MetaTest.php</file>
            <file>lib/LRezek/Neo4j/Tests/RepositoryTest.php</file>
        </testsuite>
    </testsuites>

    
    <php>
        <var name="host" value="localhost"/>
        <var name="port" value="7474"/>
    </php>
    

    <filter>

        <blacklist>
            <directory>./lib/LRezek/Neo4j/Tests</directory>
            <directory>./lib/LRezek/Neo4j/Tests/Entity</directory>
            <directory>./lib/LRezek/Neo4j/Tests/Repo</directory>
            <directory>./vendor</directory>
            <file>./bootstrap.php</file>
            <file>./composer.json</file>
            <file>./composer.lock</file>
            <file>./phpdoc.xml</file>
            <file>./README.markdown</file>
        </blacklist>

        <whitelist>
            <directory>lib/LRezek/Neo4j/Annotation</directory>
            <directory>lib/LRezek/Neo4j/Meta</directory>
            <directory>lib/LRezek/Neo4j/Proxy</directory>
            <directory>lib/LRezek/Neo4j/Query</directory>
            <file>lib/LRezek/Neo4j/Configuration.php</file>
            <file>lib/LRezek/Neo4j/EntityManager.php</file>
            <file>lib/LRezek/Neo4j/Exception.php</file>
            <file>lib/LRezek/Neo4j/Repository.php</file>
        </whitelist>

    </filter>

</phpunit>
